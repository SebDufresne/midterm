<header>
  <nav  class="navbar navbar-light light-blue lighten-4">
    <!-- User Is Authenticated -->
    <% if(user.id) { %>
      <!-- Collapse button -->
      <button class="navbar-toggler toggler-example" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1"
        aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
        <span class="dark-blue-text">
          <i class="fas fa-hotdog fa-1x"></i>
        </span>
      </button>
    <% } else { %>
      <a id="login" href="/login" alt="login">Login</a>
    <% } %>

    <a href="/"><h1>Top Dogs!</h1></a>

    <div>
      <!-- User Is Authenticated AND is NOT an admin-->
      <% if(user.id && !user.admin) { %>
        <form method='POST' action='/' data-cart="">
          <div class="cart-icon">
            <div class="price-counter"></div>
            <input id="cart" name="cart" type="hidden" value="">
            <button type="submit" id="cart-btn"><i class="fas fa-shopping-cart"></i></button>
          </div>
        </form>
      <% } %>
    </div>

    <% if(user.id) { %>
      <!-- Collapsible content -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent1">

        <!-- Links -->
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class='mr-2 user-profile' href="/profile"><%= user.name %></a>
          </li>
          <% if(user.admin) { %>
            <li class="nav-item active">
              <span class='mr-2'><a href="/" alt="list of menu items">Food items</a></span>
            </li>
            <li class="nav-item active">
                <span class='mr-2'><a href="/owners/<%= user.id %>/orders" alt="orders summary">Active Orders</a></span>
            </li>
            <li class="nav-item active">
                <span class='mr-2'><a href="/owners/<%= user.id %>/orders?section=history" alt="orders summary">Order History</a></span>
            </li>
          <% } %>
          <% if(!user.admin) { %>
            <li class="nav-item active">
                <span class='mr-2'><a href="/orders" alt="orders history">Orders History</a></span>
            </li>
          <% } %>
          <li class="nav-item">
            <form method='POST' action='/logout' class='form-inline my-2 my-lg-0'>
              <button type='submit' >Logout</button>
            </form>
          </li>
        </ul>
        <!-- Links -->

      </div>
      <!-- Collapsible content -->
    <% } %>
  </nav>
</header>
