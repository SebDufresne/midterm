<!DOCTYPE html>
<html lang="en">

<head>
  <title>Top Dogs! - Orders</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
  <link rel="stylesheet" href="/styles/styles.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.4.1.min.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- Font Awesome External JS-->
  <script src="https://kit.fontawesome.com/<%= iconsKey %>.js"></script>
</head>

<body>
  <% include ./partials/_header %>
  <main>
    <h1>orders</h1>
    <!-- Fields are displayed for information purposes only -->
    <% for (const order of structuredOrders) { %>
    <div class="order-box">
      <div class="order-essentials">
        <p>Status: <%= order.order_status %></p>
        <p>Ordered at: <%= order.ordered_at %></p>
        <p>Id: <%= order.order_id %></p>
      </div>
      <div class="comments">
        <p>Comments: <%= order.customer_comments %></p>
      </div>
      <!-- <p>User id: <%= order.user.user_id %></p> -->
      <!-- <p>User email: <%= order.user.email %></p> -->
      <div class="customer-essentials">
        <p>customer: <%= order.user.customer_name %> <%= order.user.phone_number %></p>
        <p></p>
      </div>
      <div class="order-items">
      <table class="order-table">
        <tr>
          <th>item</th>
          <th>qty</th>
        </tr>
      <% for (const food of order.foods) { %>
      <!-- <p>Food id: <%= food.food_id %></p> -->
      <tr>
      <td><%= food.food_name %></td>
      <td><%= food.food_qty %></td>
    </tr>
      <!-- <p>Food URL: <%= food.picture_url %></p> -->
      <% } %>
    </table>
  </div>
    </div>
    <% } %>
  </main>
  <% include ./partials/_footer %>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
  integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
  integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</html>
